<p>
  <%= form_with model: @kitten do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %><br>
    <%= f.label :age, "Age:" %>
    <%= f.number_field :age, in: 1..100, step: 1 %><br>
    <%= f.label :age, "Softness (1-10):" %>
    <%= f.number_field :softness, in: 1..10, step: 1 %><br>
    <%= f.label :age, "Cuteness (1-10):" %>
    <%= f.number_field :cuteness, in: 1..10, step: 1 %><br>
    <%= f.submit "Save kitten" %>
  <% end %>
</p>